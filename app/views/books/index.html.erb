<p id="notice"><%= notice %></p>

<h1>Books <span class="badge badge-primary"><%= @books.count %></span></h1>

<div class="card-deck">
    <% @books.each do |book| %>
	<% cache book do %>
	  <div class="card mb-3" style="min-width:230px">
	    <div class="card-header bg-transparent small">
			<% if book.id < 40 %>Old Testament<% end %>
			<% if book.id > 39 %>New Testament<% end %>
		</div>
	    <div class="card-body">
	      <p class="card-text"><%= book.name %></p>
	    </div>
	    <div class="card-footer bg-transparent small"><%= link_to 'Show', book %></div>
	  </div>
	  <% end %>
    <% end %>
</div>