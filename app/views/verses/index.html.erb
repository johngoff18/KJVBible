<p id="notice"><%= notice %></p>

<h1>Verses </h1>

<%= form_tag(verses_path, method: :get, class:'form-inline' )do %>
<%= text_field_tag(:search, params[:search], class:'form-control' )%>
<%= submit_tag ("Search") ,class:'btn btn-outline-primary'%>
<% end %>

<p class="text-muted small"><%= @verses.count %> verses</p>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Chapter</th>
      <th>Verse</th>
      <th>Verse text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verses.each do |verse| %>
      <tr>
        <td><%= verse.book.name %></td>
        <td><%= verse.chapter %></td>
        <td><%= verse.verse %></td>
        <td><%= verse.verse_text %></td>
        <td><%= link_to 'Show', verse %></td>
      </tr>
    <% end %>
  </tbody>
</table>
