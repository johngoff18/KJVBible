<p id="notice"><%= notice %></p>

<h1>Verses</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Chapter</th>
      <th>Verse</th>
      <th>Verse text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verses.each do |verse| %>
      <tr>
        <td><%= verse.book %></td>
        <td><%= verse.chapter %></td>
        <td><%= verse.verse %></td>
        <td><%= verse.verse_text %></td>
        <td><%= link_to 'Show', verse %></td>
      </tr>
    <% end %>
  </tbody>
</table>
